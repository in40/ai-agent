# Add this to the http block of your main nginx configuration
# (typically in /etc/nginx/nginx.conf, inside the 'http {' block)

proxy_cache_path /var/cache/nginx/models levels=1:2 keys_zone=model_cache:100m max_size=2g inactive=24h use_temp_path=off;

# Then your server configuration would be:
server {
    listen 80;
    server_name 194.87.111.218;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name 194.87.111.218 ai.sorokinonline.com;

    # Increase client body size for file uploads (100MB = 100M)
    client_max_body_size 100M;

    # Increase request timeout for large file uploads
    client_body_timeout 6000s;

    # SSL Certificate and Key (to be generated by scripts)
    ssl_certificate /etc/letsencrypt/live/ai.sorokinonline.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/ai.sorokinonline.com/privkey.pem; # managed by Certbot

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # SSL Configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256';
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Proxy settings
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Port $server_port;

    # Disable buffering for better performance
    proxy_buffering off;
    proxy_request_buffering off;

    # Timeouts - increased for large file uploads
    proxy_connect_timeout 600s;
    proxy_send_timeout 600s;
    proxy_read_timeout 600s;

    # Location for serving language models
    location /models/ {
        # Serve static files directly from nginx
        alias /var/www/models/;
        
        # Enable caching for model files
        expires 1d;
        add_header Cache-Control "public, immutable";
        
        # Add headers for better debugging
        add_header X-Cache-Status "STATIC";
        
        # Security: Prevent directory listing
        location ~ /\. {
            deny all;
        }
    }

    # Location for serving JavaScript files (including Pocketsphinx.js)
    location /js/ {
        # Serve static files directly from nginx
        alias /var/www/js/;
        
        # Enable caching for JS files
        expires 1h;
        add_header Cache-Control "public";
        
        # Security: Prevent directory listing
        location ~ /\. {
            deny all;
        }
    }

    location / {
        # Forward to internal NGINX server
        proxy_pass https://192.168.51.216;

        # SSL verification for backend (adjust as needed)
        proxy_ssl_verify off;  # Set to 'on' if internal server has valid certificate

        # Optional: Specific backend SSL settings
        proxy_ssl_trusted_certificate /etc/ssl/certs/ca-certificates.crt;
        proxy_ssl_session_reuse on;

        # Buffer settings
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;
    }

    # Health check endpoint (optional)
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}